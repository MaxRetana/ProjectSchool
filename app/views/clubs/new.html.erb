<%= form_with model: @club, url: clubs_path do |f| %>

  <div class="form-group">
    <%= f.label :nombre, class: "d-block" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :capacidad, class: "d-block"  %>
    <%= f.number_field :capacity, class: "form-control"  %>
  </div>

  <div class="form-group">
    <% if current_user.role == "encargado" %>
      <%= f.hidden_field :user_id, value: current_user.id %>
    <% else %>
      <%= f.label :encargado, class: "d-block" %>
      <%= f.select :user_id, options_for_select(@users.map { |user| [user.name, user.id] }), {}, class: "form-control" %>
    <% end %>
  </div>


  <div class="form-group">
    <%= f.label :descripcion, class: "d-block"  %>
    <%= f.text_area :description, class: "form-control"  %>
  </div>

  <%= f.submit%>
<% end %>
